{
    "manifest_version": 3,
    "name": "LieSpy - Detect AI",
    "version": "1.0",
    "description": "Detects and highlights AI-generated images on webpages (80%).",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["https://api.sightengine.com/*", "https://*/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
     "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "LieSpy",
        "default_popup": "popup/popup.html"
    }
}